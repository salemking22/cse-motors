<%- include('../partials/header') %>

<div class="management-content">
  <h1>Account Management</h1>

  <% if (notice && notice.length > 0) { %>
    <p class="notice"><%= notice %></p>
  <% } %>

  <% if (accountData) { %>
    <!-- Greeting based on account type -->
    <h2>Welcome <%= accountData.account_firstname %></h2>

    <% if (accountData.account_type === 'Employee' || accountData.account_type === 'Admin') { %>
      <h3>Inventory Management</h3>
      <p><a href="/inv">Go to Inventory Management</a></p>
    <% } %>

    <!-- ✅ Show updated account details -->
    <div class="account-details">
      <p><strong>First Name:</strong> <%= accountData.account_firstname %></p>
      <p><strong>Last Name:</strong> <%= accountData.account_lastname %></p>
      <p><strong>Email:</strong> <%= accountData.account_email %></p>
      <p><strong>Account Type:</strong> <%= accountData.account_type %></p>
    </div>

    <!-- Update Account Information link (for ALL clients) -->
    <p><a href="/account/update/<%= accountData.account_id %>">Update Account Information</a></p>

    <!-- ✅ Logout link -->
    <p><a href="/account/logout">Logout</a></p>
  <% } else { %>
    <p>Please log in to manage your account.</p>
  <% } %>
</div>

<%- include('../partials/footer') %>