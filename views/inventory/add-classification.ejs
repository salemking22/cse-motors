<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <title><%= title %></title>
  <link rel="stylesheet" href="/css/styles.css">
</head>
<body>
  <!-- ✅ Dynamic header -->
  <header>
    <h1>Welcome to CSE Motors!</h1>
    <nav>
      <%- nav %> <!-- uses utilities.getNav() -->
    </nav>
  </header>

  <main>
    <h1><%= title %></h1>

    <!-- Flash message area -->
    <% if (message && message.length > 0) { %>
      <div class="flash">
        <% message.forEach(msg => { %>
          <p><%= msg %></p>
        <% }) %>
      </div>
    <% } %>

    <!-- Classification form -->
    <form action="/inv/add-classification" method="post">
      <label for="classification_name">Classification Name</label>
      <input 
        type="text" 
        id="classification_name" 
        name="classification_name" 
        value="<%= typeof classification_name !== 'undefined' ? classification_name : '' %>" 
        required 
        pattern="^[A-Za-z]+$"
        title="No spaces or special characters allowed"
      >
      <button type="submit">Add Classification</button>
    </form>

    <!-- Back to Inventory Management -->
    <div class="back-home">
      <a href="/inv" class="btn">← Back to Inventory Management</a>
    </div>
  </main>

  <!-- ✅ Footer -->
  <footer>
    <div class="footer-content">
      <p>© 2025, CSE 340 App</p>
      <a href="/error" class="trigger-error-link">Trigger Error</a>
    </div>
  </footer>
</body>
</html>